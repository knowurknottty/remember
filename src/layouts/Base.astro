---
const { title = "Remember" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <style>
      :root{--bg:#070A12;--panel:#0C1020;--text:#EAF0FF;--muted:#A9B4D6;--line:rgba(255,255,255,.12);--accent:#4D9CFF;--accent2:#6D7FFF;--max:780px}
      *{box-sizing:border-box}
      body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;background:var(--bg);color:var(--text);line-height:1.6}
      a{color:inherit;text-decoration:none}
      .wrap{max-width:var(--max);margin:0 auto;padding:20px}
      header{display:flex;align-items:center;justify-content:space-between;gap:14px;padding:20px;border-bottom:1px solid var(--line)}
      nav{display:flex;gap:12px;flex-wrap:wrap;justify-content:flex-end}
      nav a{color:var(--muted);padding:8px 10px;border-radius:12px}
      nav a:hover{background:rgba(255,255,255,.06);color:var(--text)}
      .brand{display:flex;align-items:center;gap:12px}
      .logo{width:36px;height:36px;border-radius:12px;background:linear-gradient(135deg,var(--accent),var(--accent2))}
      .card{background:linear-gradient(180deg,rgba(255,255,255,.06),rgba(255,255,255,.03));border:1px solid var(--line);border-radius:18px;padding:20px}
      h1{margin:0 0 10px;font-size:clamp(30px,4vw,46px);line-height:1.05;letter-spacing:-.03em;font-weight:900}
      h2{margin:0 0 10px;font-size:22px}
      p{margin:0 0 10px;color:var(--muted)}
      .btn{display:inline-flex;gap:10px;align-items:center;border:1px solid var(--line);background:rgba(255,255,255,.04);color:var(--text);padding:10px 14px;border-radius:14px;font-weight:600;cursor:pointer;font-size:15px}
      .btn:hover{background:rgba(255,255,255,.08)}
      .btn.primary{border:0;background:linear-gradient(135deg,var(--accent),var(--accent2));color:#fff}
      .btn.primary:hover{opacity:.9}
      .grid2{display:grid;grid-template-columns:1fr 1fr;gap:14px}
      @media (max-width:900px){.grid2{grid-template-columns:1fr} header{position:relative;flex-wrap:wrap}}
      input, textarea, select{width:100%;padding:11px 12px;border-radius:14px;border:1px solid var(--line);background:var(--panel);color:var(--text);font-family:inherit;font-size:14px}
      textarea{min-height:120px;resize:vertical}
      label{font-size:13px;color:var(--muted)}
      .k{font-size:12px;letter-spacing:.9px;text-transform:uppercase;color:rgba(234,240,255,.5);font-weight:700}
      .row{display:flex;gap:10px;flex-wrap:wrap;align-items:center}
      .list{margin:10px 0 0;padding:0 0 0 18px;color:var(--muted)}
      .foot{margin-top:22px;padding-top:16px;border-top:1px solid var(--line);color:var(--muted);font-size:14px}
      .mono{font-family:ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,"Liberation Mono","Courier New",monospace;font-size:13px}
    </style>
  </head>
  <body>
    <header>
      <a class="brand" href="/">
        <div class="logo" aria-hidden="true"></div>
        <div>
          <div style="font-weight:800">Remember</div>
          <div class="k">Experiment • Games-style training</div>
        </div>
      </a>
      <nav>
        <a href="/psi-games-2025">Psi Games 2025</a>
        <a href="/protocols">Protocols</a>
        <a href="/submit">Submit</a>
        <a href="/dashboard">Dashboard</a>
      </nav>
    </header>
    <main class="wrap">
      <slot />
      <div class="foot">
        <div>© <span id="y"></span> Remember Project</div>
        <div class="row">
          <a href="/submit">Log a session</a>
          <span>•</span>
          <a href="/protocols">Training</a>
        </div>
      </div>
    </main>
    <script>
      document.getElementById("y").textContent = new Date().getFullYear();
    </script>
  </body>
</html>